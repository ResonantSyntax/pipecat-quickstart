# Deepgram Speech-to-Text
STT_PROVIDER=deepgram
DEEPGRAM_API_KEY=your_deepgram_api_key
DEEPGRAM_MODEL=nova-2-phonecall

# LLM Provider Configuration
# Set LLM_PROVIDER to "vllm" to use hosted vLLM, or "openai" (default) for OpenAI
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key

# vLLM Configuration (when LLM_PROVIDER=vllm)
# IMPORTANT: Your vLLM server MUST be started with these flags for function calling to work:
#   --enable-auto-tool-choice
#   --tool-call-parser
# Without these flags, you'll get errors like: "auto tool choice requires --enable-auto-tool-choice and --tool-call-parser to be set"
GPU_LLM_BASE_URL=http://13.62.130.92:8000/v1
GPU_LLM_MODEL=qwen2p5-1_5b
GPU_LLM_TEMPERATURE=0.8

# Azure Speech Services TTS
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=your_azure_region
AZURE_TTS_VOICE=en-US-NancyMultilingualNeural

# HeyGen Video Avatar
# See: https://reference-server.pipecat.ai/en/latest/api/pipecat.services.heygen.api.html#pipecat.services.heygen.api.NewSessionRequest
HEYGEN_API_KEY=your_heygen_api_key
HEYGEN_AVATAR_ID=cfd04a6141eb43dfb05faac440fa0852
HEYGEN_QUALITY=high
# Note: HEYGEN_AVATAR_GROUP is for reference only (not used in API)
# HEYGEN_AVATAR_GROUP=2e0443ed0d22404abb2bbd7cf37dba49

# Optional: Connect via Daily WebRTC locally
DAILY_API_KEY=your_daily_api_key